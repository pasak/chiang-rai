<div class="form-group row">
    <label for="HaveVotingRights" class="{{FormControl.LabelClass}} col-form-label">{{Label.HaveVotingRights}}</label>
    <div class="{{FormControl.InputClass}}">
        <input type="checkbox" class="pt-3" id="HaveVotingRights" name="HaveVotingRights" value="Y" 
            {{#ifCond People.HaveVotingRights '==' 'Y'}}checked{{/ifCond}}
            {{#ifCond FormControl.Mode '==' 'View'}} readonly{{/ifCond}}>
    </div>
</div>

