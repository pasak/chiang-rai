<div class="form-group row">
    <label for="IsActive" class="{{FormControl.LabelClass}} col-form-label">{{Label.IsActive}}</label>
    <div class="{{FormControl.InputClass}}">
        <input type="checkbox" class="pt-3" id="IsActive" name="IsActive" value="Y" 
            {{#ifCond People.IsActive '==' 'Y'}}checked{{/ifCond}}
            {{#ifCond FormControl.Mode '==' 'View'}} readonly{{/ifCond}}>
    </div>
</div>

<div class="form-group row">
    <label for="Remark" class="{{FormControl.fullLabelClass}} col-form-label">{{Label.Remark}}</label>
    <div class="{{FormControl.fullInputClass}}">
        <textarea class="form-control" id="Remark" name="Remark" placeholder="{{Label.Remark}}"
        {{#ifCond FormControl.Mode '==' 'View'}} readonly {{/ifCond}}>{{People.Remark}}</textarea>
    </div>
</div>

<div class="form-group row">
    <label for="Picture" class="{{FormControl.LabelClass}} col-form-label">{{Label.Picture}}</label>
    <div class="{{FormControl.InputClass}}">
        {{#ifCond FormControl.Image '!=' null}} 
            <a href="{{FormControl.Image}}" target="_blank"><img src="{{FormControl.Image}}" height="100"></a> &nbsp; 
        {{/ifCond}}
        {{#ifCond FormControl.Mode '!=' 'View'}} 
            <input type="file" name="file" class="form-control" accept="image/*, video/*" capture  onchange="CheckFileSize(this)">
            <span id="FileSizeLimit10" class="text-danger d-none">{{Label.FileSizeLimit10}}</span>
            <input type="hidden" id="FileSizeError" value="N">
        {{/ifCond}}
    </div>
</div>
