<div class="container-fluid my-1">
    <div class="card">
        <div class="card-header">
            <div class="row">
                <div class="col-sm-6 col-12 fs-3">{{Label.Edit}} {{Label.TeamMember}}</div>
            </div>
        </div><!-- card-header -->
        <form class="form-horizontal" method="post" action="/back/team/save" enctype="multipart/form-data">
        <div class="card-body">
            {{> Back/team/TeamField1}}
            {{> Back/team/TeamField2}}
        </div><!-- card-body -->
        <div class="card-footer">
            <input type="submit" id="Submit" class="btn btn-success" value="{{Label.Save}}">
        </div>
        <!-- /.card-footer -->

        <input type="hidden" id="BACKEND_URL"   value="{{FormControl.BACKEND_URL}}">
        </form>
    </div><!-- card -->
</div><!-- container-fluid -->

{{> Back/team/TeamScript}}
